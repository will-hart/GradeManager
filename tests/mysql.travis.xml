<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         bootstrap="Bootstrap.php">
	<php>
        <const name="DB_GROUP" value="testing_mysql"/>
        <const name="ROOTPATH" value="TRUE"/>
    </php>
    <testsuites>
        <testsuite name="MainTest">
            <directory>./test_cases</directory>
            <directory suffix="Test.php" phpVersion="5.3.0" phpVersionOperator=">=">./test_cases</directory>
        </testsuite>
    </testsuites>
</phpunit>
